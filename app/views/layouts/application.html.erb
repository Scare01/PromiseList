<!DOCTYPE html>
<html>
  <head>
    <title>PromiseList</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>

  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <%= link_to "PromiseList", root_path, class: "navbar-brand", id: "go_home" %>
      </div>
      <ul class="nav navbar-nav">
        <li><%= link_to "Sign Up", new_user_registration_path %></li>
        <% if current_user.present? %>
          <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Log In", new_user_session_path  %></li>
        <% end %>
        <li></li>
      </ul>
      <% if user_signed_in? && Promise.count < 10 %>
        <%= link_to "New Promise", new_promise_path, class: "navbar-text navbar-link navbar-right" %>
      <% else %>
        <p class="navbar-text navbar-right">You can add just 10 promises!</p>
      <% end %>
  </div>
  </nav>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
